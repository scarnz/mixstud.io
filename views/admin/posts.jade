extends ../template/layout

block content

  .row
    .small-12.columns
      a.button.tiny.alert(href='/admin/posts/new') New Post
  .row
    .small-12.columns
      p#delete-error.error-text
      if posts.length
        table
          thead
            th Created
            th Title
            th Author
            th # of Files
            th
          tbody
            each post in posts
              tr
                td= moment(post.createdAt).format('MM/DD/YYYY')
                td: a(href='/admin/posts/'+post.id)= post.title
                td= post.createdBy
                td= post.files.length
                td: a.button.delete-post.tiny.alert(data-post-id=post.id) Delete
      else
        h4 No Posts
