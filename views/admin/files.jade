extends ../template/layout

block content

  .row
    .small-12.columns
      p#delete-error.error-text
      if files.length
        table
          thead
            th Created
            th Post
            th Name
            th Created By
            th Thumbnail
            th
          tbody
            each file in files
              tr.image-container
                td= moment(file.createdAt).format('MM/DD/YYYY')
                td: b= file.post.title
                td= file.name
                td= file.createdBy
                td: img.file-thumb(src='/uploads/' + file.post.id + '/' + file.name)
                td: a.button.delete-image.tiny.alert(data-file-id=file.id) Delete
      else
        h4 No Files