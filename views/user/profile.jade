extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      span: a(href='/account/edit') Edit Account Info
      span= ' | '
      span: a(href='/profile/edit') Edit Profile Info
  .row
    .small-12.columns
      p
        h4
          span= profile.firstName ? profile.firstName : null
          span= ' '
          span= profile.lastName ? profile.lastName : null
      p
        span= user.email
      p
        span= profile.city ? profile.city + ', ':null
        span= profile.state ? profile.state:null