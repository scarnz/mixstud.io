extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      if posts
        each post in posts
          hr
          h3.subheader= post.title
          .row
            .large-6.small-12.columns.content
              p= post.content
            .large-6.small-12.columns.images
              each image in post.files
                img(src='/uploads/#{post.id}/#{image.name}')